<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Do Something for Idle</li>
		</mods>
	<match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		<li Class="PatchOperationReplace">
			<xpath>Defs/DSFI.IdleJobGiverDef_Thinking[defName="IdleJobGiver_Thinking"]/probabilityWeight</xpath>
				<value>
					<probabilityWeight>3</probabilityWeight> <!-- Change from 11 to 3 -->
				</value>
		</li>
		</operations>
	</match>
	</Operation>
</Patch>
